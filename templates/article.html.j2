{% extends "base.html.j2" %}

{% block title %}{{ title }} | L’Horizon Libre{% endblock %}

{% block meta %}
  <meta name="description" content="{{ meta.description }}">
  <meta name="keywords" content="{{ meta.keywords | join(', ') }}">
  <meta property="og:title" content="{{ title }}">
  <meta property="og:description" content="{{ meta.description }}">
  <meta property="og:type" content="article">
  <meta property="og:url" content="https://l-horizon-libre.fr/{{ slug }}.html">
  {% if image and image.url %}<meta property="og:image" content="{{ image.url }}">{% endif %}
  <meta property="og:site_name" content="L’Horizon Libre">
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ title }}">
  <meta name="twitter:description" content="{{ meta.description }}">
  {% if image and image.url %}<meta name="twitter:image" content="{{ image.url }}">{% endif %}
{% endblock %}

{% block content %}
<article>
  <header>
    <h1>{{ title }}</h1>
    <p class="dek">{{ dek }}</p>
    <time datetime="{{ published_iso }}">{{ published_iso }}</time>
  </header>
  
  {% if image and image.url %}
  <figure>
    <img src="{{ image.url }}" alt="Illustration pour l'article : {{ title }}">
    <figcaption>
      Photo par <a href="{{ image.author_url }}" target="_blank" rel="noopener noreferrer">{{ image.author_name }}</a> sur <a href="https://unsplash.com?utm_source=l_horizon_libre&utm_medium=referral" target="_blank" rel="noopener noreferrer">Unsplash</a>
    </figcaption>
  </figure>
  {% endif %}

  <section class="content">
    {{ body | safe }}
  </section>

  {% if bullets %}
  <section class="key-points">
    <h3>Points clés</h3>
    <ul>
      {% for b in bullets %}
      <li>{{ b }}</li>
      {% endfor %}
    </ul>
  </section>
  {% endif %}

  <footer>
    <h3>Sources</h3>
    <ul>
      {% for u in sources %}
      <li><a href="{{ u }}?utm_source=aurore" target="_blank" rel="noopener noreferrer">{{ u }}</a></li>
      {% endfor %}
    </ul>
  </footer>
</article>
{% endblock %}
