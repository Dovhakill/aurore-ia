{% extends "base.html.j2" %}

{% block title %}{{ title }} | L’Horizon Libre{% endblock %}

{% block meta %}
  <meta name="description" content="{{ meta.description }}">
  <meta name="category" content="{{ category | lower }}">
  <meta name="keywords" content="{{ meta.keywords | join(', ') }}">
  <meta property="og:title" content="{{ title }}">
  <meta property="og:description" content="{{ meta.description }}">
{% endblock %}

{% block content %}
<div class="max-w-4xl mx-auto">
    <article>
      <header class="mb-8 text-center">
        <h1 class="text-3xl md:text-5xl font-bold">{{ title }}</h1>
        <p class="text-lg text-gray-600 mt-4">{{ dek }}</p>
        <time class="text-sm text-gray-500 mt-4 block" datetime="{{ published_iso }}">{{ published_human }}</time>
      </header>
      
      {% if image and image.url %}
      <figure class="my-8">
        <img src="{{ image.url }}" alt="{{ title }}" class="article-featured-image shadow-lg">
        <figcaption class="text-xs text-gray-500 text-center mt-2">
          Photo par <a href="{{ image.author_url }}">{{ image.author_name }}</a> sur <a href="https://unsplash.com">Unsplash</a>
        </figcaption>
      </figure>
      {% endif %}

      <section class="prose prose-lg max-w-none">
        {{ body | safe }}
      </section>

      {% if bullets %}
      <section class="key-points mt-12 p-6 bg-gray-100 rounded-lg">
        <h3 class="text-2xl font-bold mb-4">Points clés</h3>
        <ul class="list-disc list-inside space-y-2">
          {% for b in bullets %}
          <li>{{ b }}</li>
          {% endfor %}
        </ul>
      </section>
      {% endif %}
    </article>
</div>
{% endblock %}
