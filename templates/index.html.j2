{% extends "base.html.j2" %}
{% block title %}{{ brand_name }} - Horizon Network{% endblock %}
{% block content %}
    {% if articles %}
    <section id="hero">
        <h2 class="text-3xl font-bold mb-6 border-l-4 pl-4" style="border-color: {{ brand_color }};">Ã€ la une</h2>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
            <div class="order-2 lg:order-1">
                <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mt-2 mb-4 leading-tight">{{ articles[0].title }}</h1>
                <p class="text-gray-500 text-sm mb-4">{{ articles[0].date_human }}</p>
                <a href="articles/{{ articles[0].filename }}" class="inline-flex items-center font-semibold group" style="color: {{ brand_color }};">Lire l'analyse</a>
            </div>
            <div class="order-1 lg:order-2">
                <a href="articles/{{ articles[0].filename }}">
                {% if articles[0].image_url and articles[0].image_url != 'None' %}
                    <img src="{{ articles[0].image_url }}" alt="{{ articles[0].title }}" class="rounded-lg shadow-xl w-full h-auto object-cover">
                {% else %}
                    <div class="rounded-lg shadow-xl w-full h-64 bg-gray-200"></div>
                {% endif %}
                </a>
            </div>
        </div>
    </section>
    {% endif %}

    {% if articles and articles|length > 1 %}
    <section id="recent-articles" class="mt-16">
        <h2 class="text-3xl font-bold mb-8 border-l-4 pl-4" style="border-color: {{ brand_color }};">Nos derniers articles</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for article in articles[1:] %}
            <div class="bg-white rounded-lg shadow-md">
                <a href="articles/{{ article.filename }}">
                {% if article.image_url and article.image_url != 'None' %}
                    <img src="{{ article.image_url }}" alt="{{ article.title }}" class="h-48 w-full object-cover">
                {% else %}
                     <div class="h-48 w-full bg-gray-200"></div>
                {% endif %}
                </a>
                <div class="p-6">
                    <h3 class="font-bold text-xl mt-2 mb-3">{{ article.title }}</h3>
                    <p class="text-gray-500 text-xs mb-3">{{ article.date_human }}</p>
                    <a href="articles/{{ article.filename }}" class="text-sm font-semibold" style="color: {{ brand_color }};">Lire la suite</a>
                </div>
            </div>
            {% endfor %}
        </div>
    </section>
    {% endif %}
{% endblock %}
