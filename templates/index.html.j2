{% extends "base.html.j2" %}
{% block title %}{{ brand_name }} - Horizon Network{% endblock %}
{% block content %}
    {% if articles %}
    <section id="hero" class="container mx-auto px-4 py-8">
        <h2 class="text-3xl font-bold mb-6 border-l-4 pl-4" style="border-color: {{ brand_color }};">Ã€ la une</h2>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
            <div class="order-2 lg:order-1">
                <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mt-2 mb-4 leading-tight">{{ articles[0].title }}</h1>
                <p class="text-gray-500 text-sm mb-4">{{ articles[0].date_human }}</p>
                <a href="articles/{{ articles[0].filename }}" class="inline-flex items-center text-lg font-semibold hover:underline group" style="color: {{ brand_color }};">Lire l'analyse</a>
            </div>
            <div class="order-1 lg:order-2">
                {% if articles[0].image_url %}
                    <img src="{{ articles[0].image_url }}" alt="{{ articles[0].title }}" class="rounded-lg shadow-xl w-full h-auto object-cover">
                {% endif %}
            </div>
        </div>
    </section>

    <section class="container mx-auto px-4 pb-12">
        <h2 class="text-2xl font-bold mb-4">Derniers articles</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for article in articles[1:] %}
                <article class="rounded-lg border border-gray-200 overflow-hidden hover:shadow-md transition-shadow bg-white">
                    {% if article.image_url %}
                        <img src="{{ article.image_url }}" alt="{{ article.title }}" class="rounded-t-lg w-full h-48 object-cover">
                    {% endif %}
                    <div class="p-5">
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">
                            <a href="articles/{{ article.filename }}" class="hover:underline">{{ article.title }}</a>
                        </h3>
                        <p class="text-sm text-gray-500">{{ article.date_human }}</p>
                    </div>
                </article>
            {% endfor %}
        </div>
    </section>
    {% else %}
    <section class="container mx-auto px-4 py-16 text-center">
        <p class="text-gray-600">Aucun article pour le moment.</p>
    </section>
    {% endif %}
{% endblock %}
